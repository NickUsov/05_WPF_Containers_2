<Window x:Class="_05_WPF_Containers_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_05_WPF_Containers_2"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" Content="1" />
        <Button Grid.Column="2" Grid.Row="0" Grid.RowSpan="2" Content="2" />
        <Button Grid.Column="0" Grid.Row="1" Content="3" />
        <Button Grid.Column="1" Grid.Row="1" Content="4" />
        <Button Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="3" Content="5"/>
    </Grid>
</Window>
